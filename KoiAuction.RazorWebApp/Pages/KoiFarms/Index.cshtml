@page
@model KoiAuction.RazorWebApp.Pages.KoiFarms.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form method="get" style="display: flex">
    <div class="form-group" style="display: flex; align-items:center">
        <label class="control-label" style="white-space: nowrap; margin: 0 5px 0 10px">Email</label>
        <input class="form-control" type="text" name="Email" value="@Model.Email" />
    </div>
    <div class="form-group" style="display: flex; align-items:center">
        <label class="control-label" style="white-space: nowrap; margin: 0 5px 0 10px">Farm Name</label>
        <input class="form-control" type="text" name="FarmName" value="@Model.FarmName" />
    </div>
    <div class="form-group" style="display: flex; align-items:center">
        <label class="control-label" style="white-space: nowrap; margin: 0 5px 0 10px">Location</label>
        <input class="form-control" type="text" name="Location" value="@Model.Location" />
    </div>
    <button type="submit" style="margin-left: 15px">Search</button>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.KoiFarm[0].FarmName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KoiFarm[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KoiFarm[0].Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KoiFarm[0].Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KoiFarm[0].OwnerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KoiFarm[0].Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KoiFarm[0].CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KoiFarm[0].Wallet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KoiFarm[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.KoiFarm) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FarmName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OwnerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Wallet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    Page @Model.CurrentPage of @Model.TotalPages
</div>

<div>
    @if (Model.CurrentPage > 1)
    {
        <a asp-page="./Index" asp-route-pageNumber="@(Model.CurrentPage - 1)" asp-route-email="@Model.Email" asp-route-farmName="@Model.FarmName" asp-route-location="@Model.Location">Previous</a>
    }

    @if (Model.CurrentPage < Model.TotalPages)
    {
        <a asp-page="./Index" asp-route-pageNumber="@(Model.CurrentPage + 1)" asp-route-email="@Model.Email" asp-route-farmName="@Model.FarmName" asp-route-location="@Model.Location">Next</a>
    }
</div>
