@page
@model KoiAuction.RazorWebApp.Pages.KoiFishes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form method="get" style="display: flex">
    <div class="form-group" style="display: flex; align-items:center">
        <label class="control-label" style="white-space: nowrap; margin: 0 5px 0 10px">Name</label>
        <input class="form-control" type="text" name="Name" value="@Model.Name" />
    </div>
    <div class="form-group" style="display: flex; align-items:center">
        <label class="control-label" style="white-space: nowrap; margin: 0 5px 0 10px">Status</label>
        <input class="form-control" type="text" name="Status" value="@Model.Status" />
    </div>
    <div class="form-group" style="display: flex; align-items:center">
        <label class="control-label" style="white-space: nowrap; margin: 0 5px 0 10px">Gender</label>
        <input class="form-control" type="text" name="Gender" value="@Model.Gender" />
    </div>
    <button type="submit" style="margin-left: 15px">Search</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.KoiFish[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KoiFish[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KoiFish[0].Farm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KoiFish[0].GroupKoi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KoiFish[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KoiFish[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KoiFish[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KoiFish[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KoiFish[0].CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KoiFish[0].UpdateDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.KoiFish)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Farm.FarmName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GroupKoi.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdateDate)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    Page @Model.CurrentPage of @Model.TotalPages
</div>

<div>
    @if (Model.CurrentPage > 1)
    {
        <a asp-page="./Index" asp-route-pageNumber="@(Model.CurrentPage - 1)" asp-route-email="@Model.Name" asp-route-farmName="@Model.Status" asp-route-location="@Model.Gender">Previous</a>
    }

    @if (Model.CurrentPage < Model.TotalPages)
    {
        <a asp-page="./Index" asp-route-pageNumber="@(Model.CurrentPage + 1)" asp-route-email="@Model.Name" asp-route-farmName="@Model.Status" asp-route-location="@Model.Gender">Next</a>
    }
</div>
